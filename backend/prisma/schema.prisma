generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt     @map("updated_at")
  bookings  Booking[]
  sessions  Session[]

  @@index([email])
  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("sessions")
}

model Server {
  id          String       @id @default(uuid())
  name        String       @unique
  cpuSpec     String       @map("cpu_spec")
  memorySpec  String       @map("memory_spec")
  storageSpec String       @map("storage_spec")
  gpuSpec     String?      @map("gpu_spec")
  status      ServerStatus @default(available)
  location    String
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt      @map("updated_at")
  bookings    Booking[]

  @@index([status])
  @@index([name])
  @@map("servers")
}

model Booking {
  id                      String        @id @default(uuid())
  serverId                String        @map("server_id")
  userId                  String        @map("user_id")
  startDate               DateTime      @map("start_date")
  endDate                 DateTime      @map("end_date")
  purpose                 String
  status                  BookingStatus @default(active)
  renewalNotificationSent Boolean       @default(false) @map("renewal_notification_sent")
  daysBooked              Int           @map("days_booked")
  createdAt               DateTime      @default(now()) @map("created_at")
  updatedAt               DateTime      @updatedAt      @map("updated_at")

  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([serverId])
  @@index([userId])
  @@index([status])
  @@index([startDate, endDate])
  @@map("bookings")
}

enum ServerStatus {
  available
  booked
  maintenance
  offline
}

enum BookingStatus {
  active
  completed
  cancelled
  pending_renewal
}
